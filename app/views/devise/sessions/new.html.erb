<div class="container">
  <div class="row">
    <div class="col-lg-2 offset-lg-2">
      <h2 style="margin:30px 0 0 0;">ログイン</h2>
    </div>
  </div>
  
  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="row">
      <div class="col-lg-2 offset-lg-2">
        <%= f.label :メールアドレス, class: "label_email" %>
      </div>
      <div class="col-lg-5 offset-lg-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_email" %>
      </div>
    </div>
  
    <div class="row">
      <div class="col-lg-2 offset-lg-2">
        <%= f.label :パスワード, class: "label_password"%>
      </div>
      <div class="col-lg-5 offset-lg-1">
        <%= f.password_field :password, autocomplete: "current-password", class: "input_password" %>
      </div>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="row">
        <div class="col-lg-3 offset-lg-5">
          <%= f.check_box :remember_me %>
          <%= f.label :ログイン状態を維持する %>
        </div>
      </div>
    <% end %>
  
    <div class="row">
      <div class="col-lg-4 offset-lg-4">
        <%= f.submit "ログイン",class:"btn btn-warning btn-lg btn-block btn_login" %>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-lg-3 offset-lg-9">
      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>