<% if user_signed_in? %>
  <% if bartered_item.bookmarked_by?(current_user) %>
    <%= link_to bartered_item_bookmarks_path(bartered_item), method: :delete, remote: true do %>
      <i class="fas fa-bookmark fa-lg"></i>
    <% end %>
  <% else %>
    <%= link_to bartered_item_bookmarks_path(bartered_item), method: :post, remote: true do %>
      <i class="far fa-bookmark fa-lg"></i>
    <% end %>
  <% end %>
<% end %>
