<div class="container">
  <% @entries.each do |entry| %>
  　<% next if entry.user == current_user %>
    <h4 class="heading"><%= link_to "#{entry.user.nick_name}さん", user_path(entry.user) %>とのチャットルーム</h4>
  <% end %>
  
  <div class="messages">
    <%= render "messages/index", messages: @messages %>
  </div>
  
  <%= form_with model:@message do |f| %>
    <div class="row">
      <div class="col-lg-9 offset-lg-1">
        <div class="form-group">
          <%= f.text_area :content, class:"form-control", id: "input_message" %>
        </div>
      </div>
    </div>
    <%= f.hidden_field :room_id, value: @room.id %>
    <div class="row">
      <div class="col-lg-2 offset-lg-8">
        <div class="text-right">
          <%= f.submit "送信", class:"btn btn-warning" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
